<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\src\SimpleBranchVersioning\build\SimpleBranchVersioning.props" />
    <Import Project="..\..\src\SimpleBranchVersioning\build\SimpleBranchVersioning.targets" />

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <!-- Example: Generate version.json file -->
        <GenerateVersionFile>true</GenerateVersionFile>
        <!-- Example: Automatic package version setting (default: true) -->
        <SetPackageVersionFromBranch>true</SetPackageVersionFromBranch>
        <!-- Example: Include commit ID as build metadata (default: true) -->
        <IncludeCommitIdMetadata>true</IncludeCommitIdMetadata>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\SimpleBranchVersioning\SimpleBranchVersioning.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>

</Project>
